<h1>Burgers</h1>

<h2>Burgers not devoured</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{this.burger_name}}</li>
      <button type="submit" burgerid={{this.id}} class="devourbutton">Devour</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
<form class="create-form">

  <div class="form-group">
    <label for="burgername">Burger Name:</label>
    <input type="text" id="burgername">
  </div>

  <button type="submit">Add Burger</button>
</form>
